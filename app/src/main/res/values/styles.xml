<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppTheme.MaterialComponents.Button.IconOnly" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:padding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="AppTheme.MaterialComponents.Button.IconOnly.Round" parent="AppTheme.MaterialComponents.Button.IconOnly">
        <item name="cornerRadius">50dp</item>
        <item name="layout_constraintDimensionRatio">1</item>
    </style>

</resources>
